<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="leftSymbols" parent="android:Widget.DeviceDefault.Button.Borderless" >
        <item name="android:textColor">#fff</item>
        <item name="android:background">#ffb9b9b9</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">0.3dp</item>
        <item name="android:layout_marginRight">0.3dp</item>
    </style>
    <style name="middleNumbers" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">#ff2d2d2d</item>
        <item name="android:background">#ffeaeaea</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">0.3dp</item>
        <item name="android:layout_marginRight">0.3dp</item>
    </style>
    <style name="rightSymbols" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:background">#ff1c90c5</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginTop">0.3dp</item>
    </style>
</resources>
