<LinearLayout
    android:id="@+id/mainRedBox"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff333333"
    android:orientation="vertical"
    tools:context=".MainActivityFragment">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/textViewDetail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:textSize="80sp"
                android:textColor="#ffffffff"
                android:inputType="text"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:maxLength="15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewResult"
                android:layout_weight="1"
                android:gravity="top|right"
                android:textSize="60sp"
                android:textColor="#f2a4a4a4"
                android:linksClickable="false"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="15"/>
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bigBlueBox"
        android:layout_weight="7"
        android:background="#ff333333">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/orangeBox1"
            android:background="#ff000000"
            android:layout_weight="1"
            >

            <Button
                style="@style/leftSymbols"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/twoNd"
                android:textAllCaps="false"
                android:id="@+id/button2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/power"
                android:textAllCaps="false"
                android:id="@+id/buttonPower"
                style="@style/leftSymbols"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/square"
                android:id="@+id/buttonRoot"
                style="@style/leftSymbols"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonFactorial"
                android:textAllCaps="false"
                android:text="@string/factorial"
                android:capitalize="none"
                style="@style/leftSymbols"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/orangeBox2"
            android:background="#ff000000"
            android:layout_weight="1"
            >

            <Button
                style="@style/leftSymbols"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonBracketOpen"
                android:text="@string/bracketOpen"
                android:elegantTextHeight="false"
                android:textAllCaps="false"
                android:capitalize="none"/>

            <Button
                style="@style/leftSymbols"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonBracketClose"
                android:text="@string/bracketClose"
                android:elegantTextHeight="false"
                android:textAllCaps="false"
                android:capitalize="none"/>

            <Button
                style="@style/leftSymbols"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonTwoPowN"
                android:text="@string/twoX"
                android:elegantTextHeight="false"
                android:textAllCaps="false"
                android:capitalize="none"/>

            <Button
                style="@style/leftSymbols"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonLogarithm"
                android:text="@string/logarithm"
                android:elegantTextHeight="false"
                android:textAllCaps="false"
                android:capitalize="none"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="#ff000000"
            android:focusableInTouchMode="false"
            android:id="@+id/blackBox"
            android:layout_weight="5"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/greenBox1"
                android:animationCache="false"
                >

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/clear"
                    style="@style/middleNumbers"
                    />

                <Button
                    android:id="@+id/buttonModulo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/modulo"
                    style="@style/middleNumbers"
                    />

                <Button
                    android:id="@+id/buttonDivision"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/division"
                    style="@style/rightSymbols"
                    android:background="#ff1c90c5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/greenBox2"
                >

                <Button
                    android:id="@+id/buttonSeven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/seven"
                    style="@style/middleNumbers"
                    />

                <Button
                    android:id="@+id/buttonEight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/eight"
                    style="@style/middleNumbers"
                    />

                <Button
                    android:id="@+id/buttonNine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/nine"
                    style="@style/middleNumbers"
                    />

                <Button
                    android:id="@+id/buttonMultiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/multiply"
                    style="@style/rightSymbols"
                    android:background="#ff1c90c5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buttonFour"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/four"
                    />

                <Button
                    android:id="@+id/buttonFive"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/five"
                    />

                <Button
                    android:id="@+id/buttonSix"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/six"
                    />

                <Button
                    android:id="@+id/buttonMinus"
                    style="@style/rightSymbols"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:background="#ff1c90c5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    style="@style/middleNumbers"
                    android:id="@+id/buttonOne"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/one"
                    />

                <Button
                    style="@style/middleNumbers"
                    android:id="@+id/buttonTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/two"
                    />

                <Button
                    style="@style/middleNumbers"
                    android:id="@+id/buttonThree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/three"
                    />

                <Button
                    style="@style/rightSymbols"
                    android:id="@+id/buttonPlus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:background="#ff1c90c5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:baselineAligned="false">

                <Button
                    android:id="@+id/buttonZero"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:layout_weight="2"/>

                <Button
                    android:id="@+id/buttonDot"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/dot"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/buttonEqual"
                    style="@style/rightSymbols"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/equal"
                    android:background="#ff1c90c5"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>