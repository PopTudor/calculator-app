<LinearLayout
    android:id="@+id/mainRedBox"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff333333"
    android:orientation="vertical"
    tools:context=".MainActivityFragment">

    <LinearLayout
        android:id="@+id/topGreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ff222222"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textSize="40dp"
                android:textColor="#ffffffff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/zero"
                android:id="@+id/writeDetail"
                android:layout_weight="1"
                android:gravity="top|right"
                android:textSize="20dp"
                android:textColor="#f2a4a4a4"
                />
        </LinearLayout>

        <Button
            android:id="@+id/button16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Button"
            android:gravity="right"
            android:layout_gravity="top"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bigBlueBox"
        android:layout_weight="5"
        android:background="#ff333333">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/orangeBox1"
            android:background="#ff000000"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/power"
                android:textAllCaps="false"
                android:id="@+id/buttonPower"
                style="@style/topSymbols"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/square"
                android:id="@+id/buttonRoot"
                style="@style/topSymbols"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonFactorial"
                android:textAllCaps="false"
                android:text="@string/factorial"
                android:capitalize="none"
                style="@style/topSymbols"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonLn"
                android:text="@string/logarithmNat"
                android:elegantTextHeight="false"
                android:textAllCaps="false"
                android:capitalize="none"
                style="@style/topSymbols"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/orangeBox2"
            android:background="#ff000000"
            android:layout_weight="1"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonSin"
                android:textAllCaps="false"
                android:text="@string/sin"
                style="@style/topSymbols"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonCos"
                android:textAllCaps="false"
                android:text="@string/cos"
                style="@style/topSymbols"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonTan"
                android:textAllCaps="false"
                android:text="@string/tan"
                style="@style/topSymbols"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:id="@+id/buttonLog"
                android:text="@string/logarithm"
                style="@style/topSymbols"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:background="#ff000000"
            android:focusableInTouchMode="false"
            android:id="@+id/blackBox"
            android:layout_weight="5"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/greenBox1"
                android:animationCache="false"
                >

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/clear"
                    style="@style/middleNumbers"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonNegation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/pozNeg"
                    style="@style/middleNumbers"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonModulo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/percent"
                    style="@style/middleNumbers"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonDivision"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/division"
                    style="@style/rightSymbols"
                    android:background="#ff1c90c5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/greenBox2"
                >

                <Button
                    android:id="@+id/buttonSeven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/seven"
                    style="@style/middleNumbers"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonEight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/eight"
                    style="@style/middleNumbers"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonNine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/nine"
                    style="@style/middleNumbers"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonMultiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/multiply"
                    style="@style/rightSymbols"
                    android:background="#ff1c90c5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buttonFour"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/four"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonFive"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/five"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonSix"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/six"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonMinus"
                    style="@style/rightSymbols"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/substraction"
                    android:background="#ff1c90c5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    style="@style/middleNumbers"
                    android:id="@+id/buttonOne"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/one"
                    android:textColor="#ff000000"/>

                <Button
                    style="@style/middleNumbers"
                    android:id="@+id/buttonTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/two"
                    android:textColor="#ff000000"/>

                <Button
                    style="@style/middleNumbers"
                    android:id="@+id/buttonThree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/three"
                    android:textColor="#ff000000"/>

                <Button
                    style="@style/rightSymbols"
                    android:id="@+id/buttonPlus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+"
                    android:background="#ff1c90c5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buttonZero"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="#ff000000"/>

                <Button
                    android:id="@+id/buttonDot"
                    style="@style/middleNumbers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/dot"
                    android:textColor="#ff000000"
                    />

                <Button
                    android:id="@+id/buttonEqual"
                    style="@style/rightSymbols"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/equal"
                    android:background="#ff1c90c5"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>