<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#fff</item>

        <item name="android:background">#EEEEEE</item>

        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:selectable">false</item>
        <item name="android:editable">false</item>

        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>

    </style>

    <style name="topTheme" parent="android:Widget.Material.Button.Borderless">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textColorUp</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:selectable">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="downTheme" parent="android:Widget.Material.Button.Borderless">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="downLeftButtons" parent="downTheme">
        <item name="android:background">@drawable/ripple_left</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="downRightButtons" parent="downTheme">
        <item name="android:background">@drawable/ripple_right</item>

    </style>

    <style name="topButtons" parent="topTheme">
        <item name="android:background">@drawable/top_ripple</item>
    </style>


</resources>